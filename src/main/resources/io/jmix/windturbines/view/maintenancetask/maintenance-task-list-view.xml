<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://maintenanceTaskListView.title"
      focusComponent="contentTabSheet">
    <data>
        <collection id="maintenanceTasksDc"
                    class="io.jmix.windturbines.entity.MaintenanceTask">
            <fetchPlan extends="_base">
                <property name="technican" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="maintenanceTasksDl" readOnly="true">
                <query>
                    <![CDATA[select e from MaintenanceTask e]]>
                </query>
            </loader>
        </collection>
        <collection id="myMaintenanceTasksDc"
                    class="io.jmix.windturbines.entity.MaintenanceTask">
            <fetchPlan extends="_base">
                <property name="technican" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="myMaintenanceTasksDl" readOnly="true">
                <query>
                    <![CDATA[select e from MaintenanceTask e where e.technican.id = :current_user_id order by e.maintenanceTaskDate ASC ]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout>
        <tabSheet id="contentTabSheet" width="100%" themeNames="centered" height="100%">
            <tab id="myTasksTab" label="msg://myTasks">
                <vbox width="100%" alignItems="CENTER" height="100%" padding="false" spacing="false">
                    <details id="myTasksFilter" summaryText="msg://filter" width="100%" themeNames="filled">
                        <propertyFilter property="taskStatus"
                                        operation="EQUAL"
                                        dataLoader="myMaintenanceTasksDl"
                                        labelPosition="TOP"
                                        label="msg://taskStatusFilter"
                                        width="100%"
                        />
                        <propertyFilter property="type"
                                        operation="EQUAL"
                                        dataLoader="myMaintenanceTasksDl"
                                        labelPosition="TOP"
                                        label="msg://taskTypeFilter"
                                        width="100%"
                        />
                        <propertyFilter property="maintenanceTaskDate"
                                        operation="EQUAL"
                                        dataLoader="myMaintenanceTasksDl"
                                        labelPosition="TOP"
                                        label="msg://maintenanceTaskDateFilter"
                                        width="100%"
                        />
                    </details>
                    <virtualList id="myMaintenanceTasksVirtualList"
                                 width="100%"
                                 height="100%"
                                 itemsContainer="myMaintenanceTasksDc"
                                 alignSelf="CENTER"/>
                </vbox>
            </tab>
            <tab id="allTasksTab" label="msg://allTasks">
                <vbox width="100%" alignItems="CENTER" height="100%" padding="false" spacing="false">
                    <details id="allTasksFilter" summaryText="msg://filter" width="100%" themeNames="filled">
                        <propertyFilter property="taskStatus"
                                        operation="EQUAL"
                                        dataLoader="maintenanceTasksDl"
                                        labelPosition="TOP"
                                        label="msg://taskStatusFilter"
                                        width="100%"
                        />
                        <propertyFilter property="type"
                                        operation="EQUAL"
                                        dataLoader="maintenanceTasksDl"
                                        labelPosition="TOP"
                                        label="msg://taskTypeFilter"
                                        width="100%"
                        />
                        <propertyFilter property="maintenanceTaskDate"
                                        operation="EQUAL"
                                        dataLoader="maintenanceTasksDl"
                                        labelPosition="TOP"
                                        label="msg://maintenanceTaskDateFilter"
                                        width="100%"
                        />
                    </details>
                    <virtualList id="allMaintenanceTasksVirtualList"
                                 width="100%"
                                 height="100%"
                                 itemsContainer="maintenanceTasksDc"
                                 alignSelf="CENTER"/>
                </vbox>
            </tab>
        </tabSheet>

    </layout>
</view>
